<!DOCTYPE html>
<meta charset=utf-8/>
<html>
<head>
  <title>Add a new Post</title>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />

  <%= ui_css %>
  <%= stylesheet_link_tag "system/form.css" %>
  <%= javascript_include_tag :ui%>
  <%= javascript_include_tag :editor%>
  <%= csrf_meta_tag %>


<script>

  $(document).ready(function() {
    $("textarea").ckeditor();

 });

  </script>
</head>
<body>


  <div id="topbar">

      <%= render 'common/adminnav' %>
  </div>

<div id="main">

  <div id="page-content">
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title,:placeholder=>"Enter a title for the page" %>
  </div>


<div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

    <div class="field">
    <%= f.label :categories %><br />
    <%= f.text_field:categories %>
  </div>


  <div class="field">
    <%= f.label "Thumb" %><br />


    <%= select("post","thumbnail",options_for_select(@thumbnails)) %>



  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  </div>




</div>






</body>

</html>